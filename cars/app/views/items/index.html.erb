<p id="notice"><%= notice %></p>

<form action="/items" method="GET">
  Description: <input type="text" name="description" placeholder="Description" value="<%= @description %>"/>
  <input type="submit", value="Submit" />

</form>

<form action="/items" method="GET">
  Description: <input type="text" name="employee" placeholder="Employee" value="<%= @employee %>"/>
  <input type="submit", value="Submit" />

</form>

<form action="/items" method="GET">

  <%= @vehicle_id %>
          <select name="vehicle_id">
            <option disabled selected value> Select a vehicle </option> 
            <% Vehicle.all.each_with_index do | t, index | %>
              <option value="<%= t.id %>" <% t.id.to_s == @vehicle_id ? "selected" : "" %>> <%= t.patent%> </option>
            <% end -%>
          </select>

        <input type="submit", value="SUBMIT" />

</form>

<h1>Items</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Import</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.description %></td>
        <td><%= item.import %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

