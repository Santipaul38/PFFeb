<%= form_with(model: service) do |form| %>
  <% if service.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(service.errors.count, "error") %> prohibited this service from being saved:</h2>

      <ul>
        <% service.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :time %>
    <%= form.datetime_select :time %>
  </div>

  <div class="field">
    <%= form.label :employee %>
    <%= form.text_field :employee %>
  </div>

  <div class="field">
    <%= form.label :observation %>
    <%= form.text_area :observation %>
  </div>

  <<% if params[:vehicle_id] %>
    <div class="field" style="display: none;">
      <%= form.label :vehicle_id %>
      <%= form.number_field :vehicle_id, :value => params[:vehicle_id] %>
    </div>

  <% else %>
    <div class="field">
      <%= form.label :vehicle_id %>
      <%= form.collection_select(:vehicle_id, Vehicle.all, :id, :patent) %>
    </div>
    
  <% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
