<p id="notice"><%= notice %></p>

<h1>Airplanes</h1>

<form action="/airplanes" method="GET">
  
  Model or Registration: <input type="m_r" name="m_r" placeholder="Model or Registration" value="<%= @m_r %>"/>

  <input type="submit", value="SUBMIT" />
</form>

<table>
  <thead>
    <tr>
      <th>Model</th>
      <th>Registration</th>
      <th>Seatings</th>
      <th>Company</th>
      <th>Flights Count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @airplanes.each do |airplane| %>
      <tr>
        <td><%= airplane.model %></td>
        <td><%= airplane.registration %></td>
        <td><%= airplane.seatings %></td>
        <td><%= airplane.company.name %></td>
         <td><%= airplane.flightscount %></td>
        <td><%= link_to 'Show', airplane %></td>
        <td><%= link_to 'Edit', edit_airplane_path(airplane) %></td>
        <td><%= link_to 'Destroy', airplane, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Airplane', new_airplane_path %>
