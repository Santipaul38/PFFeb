<h1>Brand</h1>

<p>
  <strong>Name:</strong>
  <%= @brand.name %>
</p>

<p>
  <strong>Country:</strong>
  <%= @brand.country %>
</p>

<br>

<h1>Components</h1>

<table>
  <thead>
    <tr>
      <th>RGB +Adds</th>	
      <th>Model</th>
      <th>Type</th>
      <th>Serial number</th>
      <th>Gamer Rgb</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody style="text-align: center">
    <% Component.all.each do |component| %>
	    <% if component.brand == @brand %>
	      <% if component.rgb == true %>
	      	<tr style="background-color: #40FF00">
	      <% else %>
	      	<tr>
	      <% end %>
	        <% if component.rgb == true %>
	          <td> + 25% </td>
	        <% else %>
	          <td></td>
	        <% end %>
	        <td><%= component.model %></td>
	        <td><%= component.category %></td>
	        <td><%= component.serial_number %></td>
	        <td><%= component.rgb %></td>
	        <td><%= link_to 'Show', component %></td>
	        <td><%= link_to 'Edit', edit_component_path(component) %></td>
	        <td><%= link_to 'Destroy', component, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	      </tr>
	    <% end %>
	<% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_brand_path(@brand) %> |
